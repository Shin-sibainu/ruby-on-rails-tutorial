<h1>投稿編集</h1>

<%= form_with model: @tweet, local: true, html: {class: "form-container"} do
|form| %>
<div class="form-input">
  <div><%= form.label :title %> <%= form.text_field :title %></div>
</div>

<div class="form-input">
  <div><%= form.label :content %> <%= form.text_area :content %></div>
</div>

<div class="button-container">
  <%= form.submit '更新', class: "link-button" %>
</div>

<% end %>
